<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <flow name="echo">
        <echo-component />
    </flow>

    <flow name="aFlow">
        <echo-component />
    </flow>

    <flow name="bFlow">
        <echo-component />
    </flow>

    <flow name="createLeague">
        <logger />
        <set-variable variableName="resourceId" value="1"/>
    </flow>

    <flow name="retrieveLeague">
        <logger />
        <expression-component>
            if(resourceId==1){payload="{'id':1,'name'='one'}";}
            else if(resourceId==2){payload="{'id':2,'name'='two'}";}
            else if(resourceId==3){payload="{'id':3,'name'='three'}";}
            else{payload="error";}
        </expression-component>
    </flow>

    <flow name="updateLeague">
        <logger />
        <expression-component>
            if(resourceId==1){payload="{'id':1,'name'='ONE'}"}
            else if(resourceId==2){payload="{'id':2,'name'='TWO'}"}
            else if(resourceId==2){payload="{'id':3,'name'='THREE'}"}
        </expression-component>
    </flow>

    <flow name="existsLeague">
        <logger />
    </flow>

    <flow name="deleteLeague">
        <logger />
    </flow>
    
    <flow name="retrieveLeagues">
        <set-payload value="{leagues:[{'id':1,'name'='one'},{'id':2,'name'='two'},{'id':3,'name'='three'}]}"/>
    </flow>

    <flow name="retrieveLeagueAssociation">
        <set-payload value="Royal Spanish Football Association"/>
    </flow>

    <flow name="updateLeagueAssociation">
        <logger/>
    </flow>

</mule>
